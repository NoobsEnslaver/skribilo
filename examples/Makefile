#*    The meta Makefile for the examples                               */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    All the examples                                                 */
#*---------------------------------------------------------------------*/
EXAMPLES=slide

#*---------------------------------------------------------------------*/
#*    pop                                                              */
#*---------------------------------------------------------------------*/
.PHONY: pop

pop:
	@ for p in $(EXAMPLES); do \
          (cd $$p && $(MAKE) pop); \
        done
	@ echo examples/Makefile

#*---------------------------------------------------------------------*/
#*    Install/Uinstall                                                 */
#*---------------------------------------------------------------------*/
.PHONY: install uninstall

install:

uninstall:

#*---------------------------------------------------------------------*/
#*    cleaning                                                         */
#*---------------------------------------------------------------------*/
.PHONY: clean distclean

clean:
	for p in $(EXAMPLES); do \
          (cd $$p && $(MAKE) clean); \
        done

distclean: clean
	 
