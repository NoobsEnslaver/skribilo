(section :title "XML Engine" :file #t
   (mark "xml-engine")
   (index "XML" :note "Engine")

   (p [The XML engine produces a simple XML representation of Skribilo
documents that is essentially a one-to-one mapping of the input
document.  For instance, ,(tt [chapter]) markups are turned into ,(tt
[<chapter>]) nodes, etc.])
   
   (subsection :title "XML Customization"
      
      (doc-engine 'xml
	 `()
	 :source "skribilo/engine/xml.scm")))
